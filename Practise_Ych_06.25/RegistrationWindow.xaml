<Window x:Class="Practise_Ych_06._25.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practise_Ych_06._25"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Регистрация" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            

            <TextBox x:Name="txtLogin"  Margin="0,0,0,10" 
                 />

            <PasswordBox x:Name="txtPassword"  Margin="0,0,0,20"
                     />

            <TextBlock x:Name="txtError" Foreground="Red" Margin="0,0,0,10" TextWrapping="Wrap"/>
            

            <Button x:Name="BtnRegister" Content="Зарегистрироваться" Margin="0,0,0,10" 
                
                Click="BtnRegister_Click"/>

            <Button x:Name="BtnToLogin" Content="Уже есть аккаунт? Войти" 
                
                Click="BtnToLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
