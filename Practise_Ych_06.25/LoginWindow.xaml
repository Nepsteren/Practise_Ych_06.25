<Window x:Class="Practise_Ych_06._25.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practise_Ych_06._25"
        mc:Ignorable="d"
        Title="LoginWindow" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Вход в систему" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Роль:"/>
            <ComboBox x:Name="RoleComboBox" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Employee"/>
                <ComboBoxItem Content="Finance"/>
            </ComboBox>

            <TextBox x:Name="txtLogin"  Margin="0,0,0,10" 
                 />

            <PasswordBox x:Name="txtPassword"  Margin="0,0,0,20"
                     />

            <TextBlock x:Name="txtError" Foreground="Red" Margin="0,0,0,10" TextWrapping="Wrap"/>

            <Button x:Name="BtnLogin" Content="Войти" Margin="0,0,0,10" 
                
                Click="BtnLogin_Click"/>

            

            <Button x:Name="BtnToRegister" Content="Регистрация" 
                
                Click="BtnToRegister_Click"/>
        </StackPanel>
        </Grid>
</Window>
